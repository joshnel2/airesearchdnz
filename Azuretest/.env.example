# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# Westlaw OAuth 2.0 Configuration (REQUIRED for OAuth)
# Get these from Thomson Reuters Developer Portal: https://developer.thomsonreuters.com/
WESTLAW_CLIENT_ID=your-client-id
WESTLAW_CLIENT_SECRET=your-client-secret-NEVER-COMMIT-TO-GIT
WESTLAW_REDIRECT_URI=http://localhost:3000/api/westlaw/oauth/callback

# Westlaw API Configuration
WESTLAW_API_BASE_URL=https://api.westlaw.com/v1
WESTLAW_AUTH_URL=https://signin.thomsonreuters.com/oauth2/authorize
WESTLAW_TOKEN_URL=https://signin.thomsonreuters.com/oauth2/token

# Application Insights (Optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# SECURITY WARNING:
# ⚠️  NEVER commit the .env file to version control
# ⚠️  Keep WESTLAW_CLIENT_SECRET absolutely secret
# ⚠️  In production, use Azure Key Vault or similar secure storage
